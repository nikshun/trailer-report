<body>
  <div id="to-pdf">

    <div class="home-page">
        <button type="button" class="btn home-button" onclick="TruckOnClick()">Truck Labourate</button>
        <button type="button" class="btn home-button" onclick="TrailerOnClick()">Trailer Labourate</button>
    </div>

    <div class="second-page">
        <div class="title">Labourate Work Order: 1/3</div>
        <br>
        <form>
            <div class="form-group">
              <label for="unit">Unit #</label>
              <input type="number" class="form-control" id="unit" placeholder="E.g. 1234">
            </div>
            <div class="form-group">
              <label for="datePicker">Date</label> <br>
              <input type="date" class="form-control" id="datePicker">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Company</label>
                <input type="text" class="form-control" id="company">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Hours</label>
                <input type="number" class="form-control" id="hours" placeholder="E.g. 1.5">
            </div>

            <div id="truck-specific-fields">
              
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Technician</label>
                <!-- <input type="text" class="form-control" id="technician" placeholder=""> -->

                <select class="form-control selection" aria-label="Default select example" id="tech-select" onchange="OnOtherSelect()">
                  <option value="Alexandr">Alexandr</option>
                  <option value="Serhii">Serhii</option>
                  <option value="Valentin">Valentin</option>
                  <option value="Alexandro">Alexandro</option>
                  <option value="Green">Green</option>
                  <option value="Joseph">Joseph</option>
                  <option value="Genaro">Genaro</option>
                  <option value="Jesus">Jesus</option>
                  <option value="Juan">Juan</option>
                  <option value="Andrei">Andrei</option>
                  <option value="Ion">Ion</option>
                  <option value="Solomon">Solomon</option>
                  <option value="Ryan">Ryan</option>
                  <option value="Other">Other</option>
                </select>

                <br/>
                
                <input type="text" class="form-control" id="other" placeholder="Name">
                
            </div>

            <div id="laborate-options">
                <!-- <div class="form-check">
                  <input type="checkbox" class="form-check-input checkbox" id="Carriercheck">
                  <label class="form-check-label" for="Carriercheck">Carrier</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input checkbox" id="ThermoKingcheck">
                  <label class="form-check-label" for="ThermoKingcheck">Thermo King</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input checkbox" id="Othercheck">
                  <label class="form-check-label" for="Othercheck">Other</label>
                </div> -->
            </div>
          </form>

        <div class="footer">
                <button type="button" class="btn direction-button" onclick="BackOnClick(1)">Back</button>
                <button type="button" class="btn direction-button" onclick="NextOnClick(1)">Next</button>
        </div>
    </div>

    <div class="third-page">
        <div class="title">Labourate Work Order: 2/3</div>
        <br>
        <form>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck11">
                <label class="form-check-label" for="exampleCheck11">Brake Adjust</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck22">
                <label class="form-check-label" for="exampleCheck22">Clean Inside</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck33">
                <label class="form-check-label" for="exampleCheck33">Grease</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck4">
                <label class="form-check-label" for="exampleCheck4">Bearings Adjusted</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck5">
                <label class="form-check-label" for="exampleCheck5">Tire Pressures</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck6">
                <label class="form-check-label" for="exampleCheck6">Brake System</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck7">
                <label class="form-check-label" for="exampleCheck7">Lights</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck8">
                <label class="form-check-label" for="exampleCheck8">Air Leaks</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck9">
                <label class="form-check-label" for="exampleCheck9">Suspension</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck99">
                <label class="form-check-label" for="exampleCheck99">Seals</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input checkbox" id="exampleCheck399">
                <label class="form-check-label" for="exampleCheck399">Tires</label>
              </div>  
          </form>

        <div class="footer">
                <button type="button" class="btn direction-button" onclick="BackOnClick(2)">Back</button>
                <button type="button" class="btn direction-button" onclick="NextOnClick(2)">Next</button>
        </div>
    </div>

    <div class="third3-page">
        <div class="title">Labourate Work Order: 3/3</div>
        <br>
        
        <div>  
          <div class="left-sidebar">
            <div class="dropdown-buttons">
              <button type="button" class="btn dropdown-button" onclick="DropdownButtonOnClick('Trailer Electronics')">Trailer Electronics</button>
              <button type="button" class="btn dropdown-button" onclick="DropdownButtonOnClick('Trailer Brake')">Trailer Brake</button>
              <button type="button" class="btn dropdown-button" onclick="DropdownButtonOnClick('Air System of the Trailer')">Air System of the Trailer</button>
              <button type="button" class="btn dropdown-button" onclick="DropdownButtonOnClick('Engine')">Engine</button>
              <button type="button" class="btn dropdown-button" onclick="DropdownButtonOnClick('Trailer SUSPENSION')">Trailer SUSPENSION</button>
              <button type="button" class="btn dropdown-button" onclick="DropdownButtonOnClick('Trailer Repair')">Trailer Repair</button>
              <button type="button" class="btn dropdown-button" onclick="ListGroupItemOnClick('Other')">Other</button>
            </div>

            <div id="list-group"> 
            </div>
            
          </div>
          
          <div id="right-sidebar">
          </div>
          <div id="pageThreeHide">
            <button type="button" class="btn direction-button" onclick="ListGroupItemHIDEOnClick()" style="margin-left: 20px;margin-top: 20px;">Close</button>
          </div>
        </div>

        <div class="footer">
                <button type="button" class="btn direction-button" onclick="BackOnClick(3)">Back</button>
                <button type="button" class="btn direction-button" onclick="generatePDF()">Submit</button>
        </div>
    </div>
  </div>

